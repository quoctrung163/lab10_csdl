      h2 Danh sách sinh viên

      each sv in sinhvien
        .sinhvien
          p.mssv= sv.MSSV
          p.hoten= sv.Hoten
          p.namsinh= sv.Namsinh
          p.diemmon1= sv.DiemMon1
          p.diemmon2= sv.DiemMon2
          p.diemmon3= sv.DiemMon3
          p.email= sv.Email
