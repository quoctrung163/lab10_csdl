          br
          br
          label(for='NamSinh') NamSinh:
          input(type='text' name='NamSinh')
          br
          br
          label(for='DiemMon1') DiemMon1:
          input(type='text' name='DiemMon1')
          br
          br
          label(for='DiemMon2') DiemMon2:
          input(type='text' name='DiemMon2')
          br
          br
          label(for='DiemMon3') DiemMon3:
          input(type='text' name='DiemMon3')
          br
          br
          label(for='Email') Email:
          input(type='text' name='Email')
          br
          br
          label(for='DienThoai') DienThoai:
          input(type='text' name='DienThoai')
          
          input(type='submit' value='Submit')
    